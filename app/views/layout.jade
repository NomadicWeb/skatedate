doctype
html
  head
    title whereswall.ie - #{title}
    script(src="/javascripts/modernizr-custom.js")
    script(src="/javascripts/preload.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/font-awesome/css/font-awesome.min.css')
    meta(name='viewport', content='width=device-width', initial-scale='1')
    script.
        if(window.location.pathname === "/"){
            var srcs = ["/images/wallie-frame-1.jpg", 
                        "/images/wallie-frame-2.jpg", 
                        "/images/wallie-frame-3.jpg",
                        "/images/luke-mugshot.png", 
                        "/images/paddy-mugshot.png", 
                        "/images/martin-mugshot.png", 
                        "/images/dotted-bracket.png",
                        "/images/logo-plus-text2.png"];
            preload(srcs);
        }
    != LRScript
  body
    .container
      #wrapper
        #switch-content
          block content
        #xs-logo.hidden-md.hidden-lg
          .col-sm-8.col-sm-offset-2
            .col-sm-6.col-sm-offset-3
              #fixed-xs-menu
                include menu-sm.jade
          .col-xs-8.col-xs-offset-2
            img.img-responsive(src='/images/logo-plus-text2.png')

    #fixed-nav.hidden-xs.hidden-sm
      include menu-md.jade
    #fixed-logo.hidden-xs.hidden-sm.hidden
      a(href='/')
        img.img-responsive(src='/images/logo-plus-text2.png')
        

    // javascripts
    script(src="/javascripts/jquery.js")
    script(src="/javascripts/bootstrap.min.js")
    script(src="/javascripts/app.js")

    script.
      set_menu_icon(window.location.pathname);
